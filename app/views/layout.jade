doctype html
html(ngApp='logstashConfiguratorApp')
    head
        title= LogstashConfigurator
        link(rel='stylesheet', href='/css/bootstrap/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container-fluid
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') LogstashConfigurator
                // Collect the nav links, forms, and other content for toggling
                #navbar.collapse.navbar-collapse
                    form.navbar-form.navbar-right(action="/login", method="post")
                        .form-group
                            input.form-control(type='text', placeholder='Username')
                        .form-group
                            input.form-control(type='password', placeholder='Password')
                        button.btn.btn-success(type='submit') Sign In
block content
script(src='/js/vendor/jquery.min.js', type='text/javascript')
